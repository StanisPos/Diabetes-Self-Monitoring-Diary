{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "sourceMap": true,
        "jsx": "react",
        "skipLibCheck": true,
        "outDir": "build",
        "baseUrl": "./src",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2015",
            "es2016",
            "es2017.object",
            "es2017.string",
            "es2018.promise"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
